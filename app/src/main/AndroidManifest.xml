<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rubruck.booksearch" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".searchResults.SearchResultsActivity"
            android:label="@string/bs_search_results"/>

        <activity
            android:name=".details.DetailsActivity"
            android:label="@string/bs_details"/>

        <activity android:name=".favorites.FavoritesActivity"
            android:label="@string/bs_favorites"/>

        <activity android:name=".InformationActivity"
            android:label="@string/bs_information" />

        <activity android:name=".SettingsActivity"
            android:label="@string/bs_settings" />

    </application>

</manifest>
