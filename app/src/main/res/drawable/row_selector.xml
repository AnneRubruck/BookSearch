<?xml version="1.0" encoding="utf-8"?>
<!-- selector used to determine the text color,
    depending on whether a list item is
    currently clicked or not -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/strongBlue" />
    <item android:state_selected="true" android:color="@color/strongBlue" />
    <item android:state_active="true" android:color="@color/strongBlue" />
    <item android:state_checked="true" android:color="@color/strongBlue" />
    <item android:state_focused="true" android:color="@color/strongBlue" />
    <item android:color="@color/darkSecond" />
</selector>